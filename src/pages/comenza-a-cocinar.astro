---
// src/pages/comenza-a-cocinar.astro
import Navbar from '../components/Navbar.astro';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Comenzá a cocinar | Clau's Kitchen</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/global.css" />
    <link href="https://fonts.googleapis.com/css2?family=Just+Me+Again+Down+Here&display=swap" rel="stylesheet" />
  </head>
  <body>
    <a href="/" class="titulo-link titulo-sobre-link" title="Inicio">
      <h1 class="titulo titulo-sobre">Clau’s Kitchen</h1>
    </a>

    <main class="cocinar-contenido">
      <h2 class="subtitulo">¡Elegí tu próxima receta!</h2>

      <div class="tarjetas-recetas">
        <a href="/recetas/chipa" class="tarjeta">
          <img src="/recetas/chipa.jpg" alt="Chipa" class="imagen-tarjeta" />
          <h1 class="titulo-tarjeta">Chipa Almidón</h1>

          <p class="descripcion-tarjeta">La tradicional chipa paraguaya, perfecta para el mate</p>
        </a>

        <a href="/recetas/sopa-paraguaya" class="tarjeta">
          <img src="/recetas/sopa-paraguaya.jpg" alt="Sopa paraguaya" class="imagen-tarjeta" />
          <h1 class="titulo-tarjeta">Sopa Paraguaya</h1>
          <p class="descripcion-tarjeta">Sopa paraguaya esponjosa, ideal para compartir en familia</p>
        </a>

        <a href="/recetas/mbeju" class="tarjeta">
          <img src="/recetas/mbeju.jpg" alt="Mbejú" class="imagen-tarjeta" />
          <h1 class="titulo-tarjeta">Mbeju</h1>
          <p class="descripcion-tarjeta">Un Mbeju doradito y crocante para cualquier momento del día</p>
        </a>
      </div>
    </main>
    <Navbar />
</html>